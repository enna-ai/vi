---
import Icons from "@assets/socialIcons";

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---
<footer class={`${noMarginTop ? "" : "mt-auto"}`}>
  <div class="footer-wrapper">
    <div class="footer-icons">
      <a href="https://github.com/enna-ai" target="_blank" rel="noreferrer">
        <Icons.TbBrandGithub />
      </a>
      <a href="https://instagram.com/username" target="_blank" rel="noreferrer">
        <Icons.TbBrandInstagram />
      </a>
      <a href="https://threads.net/username" target="_blank" rel="noreferrer">
        <Icons.TbBrandThreads />
      </a>
      <a href="https://linkedin.com/in/username" target="_blank" rel="noreferrer">
        <Icons.TbBrandLinkedin />
      </a>
      <a href="mailto:username" target="_blank" rel="noreferrer">
        <Icons.TbMailHeart />
      </a>
      <a class="heart" href="https://veetoo.vercel.app" target="_blank" rel="noreferrer">
        <Icons.TbHeart />
      </a>
    </div>
    <div class="footer-copyright">
      <span>&copy; All Rights Reserved</span>
    </div>
  </div>
</footer>
<style>
  footer {
    @apply w-full;
  }
  .footer-wrapper {
    @apply flex flex-col gap-2 items-center justify-between py-6 sm:flex-row-reverse sm:py-4;
  }
  .footer-icons {
    @apply flex items-center gap-2;
  }
  .footer-icons a {
    @apply hover:text-skin-accent;
  }
</style>